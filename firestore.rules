rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Vídeos devem ser publicamente legíveis e graváveis/excluíveis pelo painel de administração.
    // Como ainda não há autenticação, permitiremos todas as operações por enquanto.
    match /videos/{videoId} {
      allow read, write, delete: if true;
    }

    // As categorias devem ser publicamente legíveis e graváveis a partir do painel de administração.
    match /categories/{categoryId} {
      allow read, write: if true;
    }

    // O documento de configurações deve ser publicamente legível e gravável a partir do painel de administração.
    match /settings/config {
      allow read, write: if true;
    }
  }
}
